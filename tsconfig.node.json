{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"strict": true
	},
	"include": [
		"src/**/*.ts",
		"vite/**/*.ts",
		"src/**/*.vue",
		"vite.config.ts",
		"vitest.config.ts",
		"eslint.config.ts",
		"src/**/*.d.ts"
	]
}
